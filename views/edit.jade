.top-content
  .inner-bg
    .container
      .row
        .col-sm-8.col-sm-offset-2.text
          -var ob = JSON.parse(userInfo)
          h1 Edit User
      .row
        .col-sm-1
        .col-md-6.col-md-offset-2
          .form-box
            .form-top
              .form-top-left
                h3 Edit
                p Fill in the form below to get update user info:
              .form-top-right
                i.fa.fa-pencil
            .form-bottom
              form.registration-form(role='form', action='/save', method='post', enctype='multipart/form-data')
                .form-group
                  label.sr-only(for='form-first-name') First name
                  input(type='hidden', name='id', value='#{ob[0].id}')
                  input#form-first-name.form-first-name.form-control(type='text', name='first_name', value='#{ob[0].first_name}', placeholder='First name...')
                .form-group
                  label.sr-only(for='form-last-name') Last name
                  input#form-last-name.form-last-name.form-control(type='text', name='last_name', value='#{ob[0].last_name}', placeholder='Last name...')
                .form-group
                  label.sr-only(for='form-email') Email
                  input#form-email.form-email.form-control(type='text', name='email', placeholder='Email...', value='#{ob[0].email}')
                .form-group
                  label.sr-only(for='form-about-yourself') Address
                  textarea#form-about-yourself.form-about-yourself.form-control(name='address', placeholder='Address...') #{ob[0].address1}
                .form-group
                  label.sr-only(for='form-about-yourself') Other Address
                  textarea#form-about-yourself.form-about-yourself.form-control(placeholder='Other Address...', name='address2') #{ob[0].address2}
                .form-group
                  - if(ob[0].profile_pic != '') {
                    | <p><img class="pull-left img_cl" src='images/profile_pic/#{ob[0].profile_pic}'></p>
                  - }
                  - if(ob[0].profile_pic == '') {
                    | <p><img class="pull-left img_cl" src='images/profile_pic/user-profile.png'></p>
                  - }
                    input.paddi-left(type='file', name='file')
                button.btn.btn-2(type='submit') Update
                a.btn.btn-3(href='listusers')
                  | Cancel
