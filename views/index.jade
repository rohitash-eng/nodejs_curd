.top-content
  .inner-bg
    .container
      .row
        .col-sm-8.col-sm-offset-2.text
          h1 Register Users
      .row
        .col-sm-1
        .col-md-6.col-md-offset-2
          .form-box
            .form-top
              .form-top-left
                h3 Sign up now
                p Fill in the form below to get instant access:
              .form-top-right
                i.fa.fa-pencil
            .form-bottom
              form.registration-form(role='form', action='/signup', method='post')
                .form-group
                  label.sr-only(for='form-first-name') First name
                  input#form-first-name.form-first-name.form-control(type='text', name='first_name', placeholder='First name...')
                .form-group
                  label.sr-only(for='form-last-name') Last name
                  input#form-last-name.form-last-name.form-control(type='text', name='last_name', placeholder='Last name...')
                .form-group
                  label.sr-only(for='form-email') Email
                  input#form-email.form-email.form-control(type='text', name='email', placeholder='Email...')
                .form-group
                  label.sr-only(for='form-about-yourself') Address
                  textarea#form-about-yourself.form-about-yourself.form-control(name='address', placeholder='Address...')
                .form-group
                  label.sr-only(for='form-about-yourself') Other Address
                  textarea#form-about-yourself.form-about-yourself.form-control(placeholder='Other Address...', name='address2')
                button.btn(type='submit') Sign me up!


